if(interactive()){

    if (require("plotcli", quietly = TRUE)) {
        library(plotcli, quietly = TRUE)
    }

    if (require("colorout", quietly = TRUE)) {
      colorout::setOutputColors(
        index=12,
        normal=11,
        number=15,
        true=15,
        negnum=13,
        false=13,
        string=6,
        const=12,
        stderror=8,
        warn=c(0, 9),
        error=c(9, 0),
        verbose=FALSE
        )
    }
}

