# vim: ft=r
Sys.setenv(LD_LIBRARY_PATH = "/opt/homebrew/lib:/usr/local/lib")

options(repos = c(CRAN = "https://cran.rstudio.org"))

options(lintr.linter_file = "~/.config/R/lintr")

options(stringsAsFactors = FALSE)

options(max.print = 1000)

options(scipen = 10)

options(editor = "nvim")

options(show.signif.stars = FALSE)

options(menu.graphics = FALSE)

# Deactivate whilst teaching; students find it confusing :(
# options(prompt = "|> ")
#
# options(continue = "|>... ")

options(styler.addins_style_transformer = "grkstyle::grk_style_transformer()")

options(
  rsthemes.theme_light = "Textmate (default)",
  rsthemes.theme_dark = "base16 Ashes {rsthemes}",
  rsthemes.theme_favorite = c("Textmate (default)", "base16 Ashes {rsthemes}")
)

options(httpgd.host = "0.0.0.0", httpgd.port = 8889)

if (interactive()) {
  if (require("data.table", quietly = TRUE)) {
    library(data.table, quietly = TRUE)
  }

  if (require("httpgd", quietly = TRUE)) {
    library(httpgd)
    hgd()
  }

  if (require("plotcli", quietly = TRUE)) {
    library(plotcli, quietly = TRUE)
    plotcli_options(
      plot_width = 45,
      plot_height = 15,
      braille = FALSE
    )
  }

  if (Sys.getenv("RSTUDIO") == "1") {
    if (require("colorout", quietly = TRUE)) {
      # RStudio's console, naturally, isn't aware of my terminal colors
      colorout::setOutputColors(
        index = 249,
        normal = 182,
        number = 158,
        true = 72,
        negnum = 210,
        false = 168,
        string = 224,
        const = 249,
        stderror = 229,
        warn = c(16, 213),
        error = c(213, 16),
        zero = 249,
        zero.limit = 1e-10,
        verbose = FALSE
      )
    }
  } else {
    if (require("colorout", quietly = TRUE)) {
      colorout::setOutputColors(
        index = 8,
        normal = 7,
        number = 10,
        true = 14,
        negnum = 9,
        false = 1,
        string = 5,
        const = 8,
        stderror = 4,
        warn = c(0, 13),
        error = c(13, 0),
        zero = 8,
        zero.limit = 1e-10,
        verbose = FALSE
      )
    }
  }
}

